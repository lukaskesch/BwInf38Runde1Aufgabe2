<Window x:Class="BwInfAufgabe2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BwInfAufgabe2"
        mc:Ignorable="d"
        Title="Aufgabe 2" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="TextboxEingabe" Grid.Row="0" Margin="20 10"></TextBox>
        <TextBox Name="TextboxAusgabe" Grid.Row="1" Margin="20 10" IsReadOnly="True" VerticalScrollBarVisibility="Auto"></TextBox>
        <Button Name="ButtonRechnen" Grid.Row="2" Margin="150 8" Content="Berechnen" Click="ButtonRechnen_Click"/>
    </Grid>
</Window>
